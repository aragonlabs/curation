    "@aragon/apps-registry": "^1.0.0",
    "@aragon/test-helpers": "^1.0.0",
    "eth-gas-reporter": "^0.1.5",
    "ganache-cli": "^6.1.0",
    "solidity-coverage": "0.4.3",
    "solidity-sha3": "^0.4.1",
    "solium": "^1.0.4",
